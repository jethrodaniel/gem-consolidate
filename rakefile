require "rake/clean"
require "bundler/gem_tasks"

task :default => %i[test install]

task :snapshot do
  sh "bundle exec exe/consolidate lib/gem/consolidate.rb " \
     "--exclude parser/current --footer='Gem::Consolidate.start' " \
     "> spec/snapshot.rb"
end

require "rake/testtask"
desc 'Run the tests'
task :spec => :test
Rake::TestTask.new(:test) do |t|
  t.libs << "spec"
  t.libs << "lib"
  t.test_files = FileList["spec/**/*_spec.rb"]
  t.warning = false # suppress `circular require` from minitest
end

CLEAN << 'pkg'
